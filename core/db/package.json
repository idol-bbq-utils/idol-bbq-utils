{
    "name": "@idol-bbq-utils/db",
    "version": "0.1.0",
    "description": "Database layer with Drizzle ORM for idol-bbq-utils",
    "author": "ChocoLZS <chocoielzs@gmail.com>",
    "homepage": "https://github.com/idol-bbq-utils/idol-bbq-utils#readme",
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        }
    },
    "directories": {
        "lib": "lib"
    },
    "files": [
        "lib",
        "drizzle",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idol-bbq-utils/idol-bbq-utils.git"
    },
    "scripts": {
        "generate:sqlite": "drizzle-kit generate --config=drizzle.sqlite.config.ts",
        "generate:pg": "drizzle-kit generate --config=drizzle.pg.config.ts",
        "studio:sqlite": "drizzle-kit studio --config=drizzle.sqlite.config.ts",
        "studio:pg": "drizzle-kit studio --config=drizzle.pg.config.ts"
    },
    "bugs": {
        "url": "https://github.com/idol-bbq-utils/idol-bbq-utils/issues"
    },
    "dependencies": {
        "@idol-bbq-utils/render": "workspace:^",
        "@idol-bbq-utils/spider": "workspace:^",
        "@idol-bbq-utils/utils": "workspace:^",
        "drizzle-orm": "^0.45.1",
        "postgres": "^3.4.4"
    },
    "devDependencies": {
        "drizzle-kit": "^0.31.8"
    }
}
